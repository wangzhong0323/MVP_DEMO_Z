<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_head_func_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iv_head_func_icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_14"
                android:src="@drawable/icon_letter_f" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_head_func_icon_1"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_head_func_dexc_1"
                android:text="功能1"
                android:layout_marginBottom="@dimen/space_16"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_head_func_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iv_head_func_icon_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_14"

                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_letter_e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_head_func_icon_2"
                android:layout_centerHorizontal="true"
                android:text="功能2"
                android:layout_marginBottom="@dimen/space_16"
                android:id="@+id/tv_head_func_dexc_2"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_head_func_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iv_head_func_icon_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_14"
                android:src="@drawable/icon_letter_m" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_head_func_icon_3"
                android:layout_centerHorizontal="true"
                android:text="功能3"
                android:layout_marginBottom="@dimen/space_16"
                android:id="@+id/tv_head_func_dexc_3"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>